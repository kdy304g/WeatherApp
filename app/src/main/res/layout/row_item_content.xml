<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="MainActivityViewModel"
            type="com.example.idusassignment.viewmodel.MainActivityViewModel" />
        <variable
            name="pos"
            type="Integer" />
    </data>
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:text="@{MainActivityViewModel.getCity(pos)}"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/table_content_cell_bg"
                android:layout_column="1"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:layout_weight="8"
                android:id="@+id/today_linear_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_content_cell_bg"
                android:layout_column="2"
                android:orientation="horizontal">
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/today_img"
                    android:layout_width="50dp"
                    imageUrl="@{MainActivityViewModel.getWeatherStateAbbr(pos,0)}"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/today_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{MainActivityViewModel.getWeatherState(pos,0)}"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/today_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="@{MainActivityViewModel.getTemp(pos,0)}"/>
                        <TextView
                            android:id="@+id/today_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/grey"
                            android:text="@{MainActivityViewModel.getHumidity(pos,0)}"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tomorrow_linear_layout"
                android:layout_column="3"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/table_content_cell_bg"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/tommorow_img"
                    android:layout_margin="10dp"
                    android:layout_width="50dp"
                    imageUrl="@{MainActivityViewModel.getWeatherStateAbbr(pos,1)}"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tommorow_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="@{MainActivityViewModel.getWeatherState(pos,1)}"
                        android:layout_weight="1"
                        android:textSize="16sp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tommorow_temp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/red"
                            android:text="@{MainActivityViewModel.getTemp(pos,1)}"/>/>
                        <TextView
                            android:id="@+id/tommorow_humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/grey"
                            android:text="@{MainActivityViewModel.getHumidity(pos,1)}"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </TableRow>

    </TableLayout>
</layout>
